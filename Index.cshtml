@{
    ViewBag.Title = "Home Page";
}

<form action="/home/about" method="post">
    <textarea id="text" name="text"></textarea>
    <input type="submit" class="btn btn-default" name="name" value="submit" />
</form>
@section Scripts{
    <script src="~/Scripts/ckeditor5/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#text'), {
                ckfinder: {
                    uploadUrl: '/home/about',
                },
                //toolbar: ['ckfinder', 'imageUpload', '|', 'heading', '|', 'bold', 'italic', '|', 'undo', 'redo']
                image: {
                    // You need to configure the image toolbar, too, so it uses the new style buttons.
                    toolbar: ['imageTextAlternative', '|', 'imageStyle:alignLeft', 'imageStyle:full', 'imageStyle:alignRight', , 'imageStyle:side'],

                    styles: [
                        'full',
                        'side',
                        'alignLeft',
                        'alignCenter',
                        'alignRight'
                    ]
                }
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}